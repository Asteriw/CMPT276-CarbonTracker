<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_route"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmpt276.kenneyw.carbonfootprinttracker.ui.AddRoute"
    android:background="@drawable/image1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="115dp"
            android:id="@+id/editText_name_addroute"
            android:hint="@string/nick_name_for_route" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:layout_below="@+id/editText_name_addroute"
            android:layout_alignLeft="@+id/editText_name_addroute"
            android:layout_alignStart="@+id/editText_name_addroute"
            android:id="@+id/editText_city_addroute"
            android:hint="@string/city_distance_in_km" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:layout_below="@+id/editText_city_addroute"
            android:layout_alignLeft="@+id/editText_city_addroute"
            android:layout_alignStart="@+id/editText_city_addroute"
            android:id="@+id/editText_highway_addroute"
            android:hint="@string/high_way_distance_in_km" />

        <TextView
            android:text="@string/highway_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt3_addroute"
            android:layout_alignBaseline="@+id/editText_highway_addroute"
            android:layout_alignBottom="@+id/editText_highway_addroute"
            android:layout_alignLeft="@+id/txt2_addroute"
            android:layout_alignStart="@+id/txt2_addroute" />

        <Button
            android:text="@android:string/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_ok_addroute"
            android:textStyle="normal|bold" />

        <Button
            android:text="@android:string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_ok_addroute"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_cancel_addroute"
            android:textStyle="normal|bold" />

        <TextView
            android:text="@string/route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt1_addroute"
            android:layout_alignBaseline="@+id/editText_name_addroute"
            android:layout_alignBottom="@+id/editText_name_addroute"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:text="@string/city_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt2_addroute"
            android:layout_alignBaseline="@+id/editText_city_addroute"
            android:layout_alignBottom="@+id/editText_city_addroute"
            android:layout_alignLeft="@+id/txt1_addroute"
            android:layout_alignStart="@+id/txt1_addroute" />
    </RelativeLayout>

</RelativeLayout>
