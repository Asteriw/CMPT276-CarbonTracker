<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_route"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cmpt276.kenneyw.carbonfootprinttracker.AddRoute">

    <TextView
        android:text="@string/highway_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highway_distance_add_route"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="@string/city_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_distance_add_route"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/highway_distance_add_route"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nickname_add_route"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/city_distance_add_route"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/highway_distance_from_user_text"
        android:layout_alignBaseline="@+id/highway_distance_add_route"
        android:layout_alignBottom="@+id/highway_distance_add_route"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/high_way_distance_in_km" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/city_distance_from_user_text"
        android:layout_alignBaseline="@+id/city_distance_add_route"
        android:layout_alignBottom="@+id/city_distance_add_route"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/city_distance_in_km" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/route_nick_name_from_user_text"
        android:layout_alignBaseline="@+id/nickname_add_route"
        android:layout_alignBottom="@+id/nickname_add_route"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/nick_name_for_route" />

    <Button
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/cancel_button_add_route" />

    <Button
        android:text="@string/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/route_nick_name_from_user_text"
        android:layout_alignStart="@+id/route_nick_name_from_user_text"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/ok_button_add_route" />
</RelativeLayout>
