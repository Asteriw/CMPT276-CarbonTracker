<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yearSpinner"
        android:layout_below="@+id/yearTV"
        android:layout_alignParentRight="false"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="false"
        android:dropDownWidth="match_parent"
        android:paddingLeft="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/makeSpinner"
        android:layout_below="@+id/makeTV"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:dropDownWidth="match_parent"
        android:paddingLeft="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/modelSpinner"
        android:layout_below="@+id/modelTV"
        android:layout_alignParentRight="false"
        android:dropDownWidth="match_parent"
        android:layout_alignParentEnd="false"
        android:paddingLeft="10dp" />

    <TextView
        android:text="@string/model_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/modelTV"
        android:layout_below="@+id/makeSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="@string/year_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/yearTV"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/modelTV"
        android:layout_alignStart="@+id/modelTV" />

    <TextView
        android:text="@string/make_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/makeTV"
        android:layout_below="@+id/yearSpinner"
        android:layout_alignLeft="@+id/modelTV"
        android:layout_alignStart="@+id/modelTV" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/modelSpinner"
        android:id="@+id/car_listview"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/modelTV"
        android:layout_alignStart="@+id/modelTV"
        android:layout_alignRight="@+id/cancel_button"
        android:layout_alignEnd="@+id/cancel_button" />

    <Button
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:id="@+id/cancel_button"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>