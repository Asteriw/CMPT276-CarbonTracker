<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmpt276.kenneyw.carbonfootprinttracker.SplashScreen">

    <Button
        android:text="@string/btn_splash_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnsplashstart"
        android:elevation="0dp"
        tools:elevation="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/image4"
        android:layout_centerVertical="true"
        android:id="@+id/splashbackground"
        android:adjustViewBounds="false"
        android:alpha="0.8"
        android:elevation="1dp"
        tools:elevation="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:elevation="2dp"
        tools:elevation="2dp"
        android:id="@+id/Splash_Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="45sp"
        android:textColor="@color/orange"
        android:shadowColor="@color/black"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/car_icon"
        android:id="@+id/splashcar"
        android:layout_marginRight="99dp"
        android:layout_marginEnd="99dp"
        android:layout_above="@+id/btnsplashstart"
        android:layout_toLeftOf="@+id/btnsplashstart"
        android:layout_toStartOf="@+id/btnsplashstart"
        android:elevation="5dp"
        tools:elevation="5dp"/>

    <TextView
        android:text="@string/authors_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:id="@+id/author_text"
        android:elevation="2dp"
        tools:elevation="2dp"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
