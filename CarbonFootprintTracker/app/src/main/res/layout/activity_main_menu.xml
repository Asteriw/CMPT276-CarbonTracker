<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image4"
    tools:context="com.cmpt276.kenneyw.carbonfootprinttracker.MainMenu">

    <Button
        android:text="@string/view_carbon_footprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_cabon_footprint_button"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/create_a_new_journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_a_new_journey_button"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/view_cabon_footprint_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/orange"
        android:elevation="2dp"
        tools:elevation="2dp"
        android:id="@+id/Splash_Title"
        android:layout_marginTop="120dp"
        android:textSize="45sp"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:shadowColor="@color/black"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/car_logo"
        app:srcCompat="@drawable/car_icon"
        android:id="@+id/car_logo"
        android:layout_alignBottom="@+id/view_cabon_footprint_button"
        android:layout_alignLeft="@+id/Splash_Title"
        android:layout_alignStart="@+id/Splash_Title"
        android:layout_marginBottom="33dp" />
</RelativeLayout>
